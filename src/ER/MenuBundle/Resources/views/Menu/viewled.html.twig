

{% extends "ERCoreBundle::layout.html.twig" %}

{% block title %}
  Paramétres réveil lumineux - {{ parent() }}
{% endblock %}

{% block body %}

 <div class="text-center">
  <h1>Paramétres du réveil lumineux</h1>
 </div>
 
  <div class="grid-container">
      <div class="grid-x align-center">
	    <div class="cell medium-8">
  
  <hr>
  
  
    {% if not led.jours.empty %}
    <p>
      Jours du réveil lumineux :
      {% for jours in led.jours %}
        <span class="bold">{{ jours.jour }} {% if not loop.last %}, {% endif %}</span>
      {% endfor %}
    </p>
  {% endif %}
  
     <hr>
  
 
      <p>
   Heure du réveil lumineux : 
    <span class="bold">
  {% if not led.heure.empty %}
   {% for heures in led.heure %}
   {{ heures.heure }}{% if not loop.last %}, {% endif %}
   {% endfor %}
   {% endif %}
   H
   {% if not led.minute.empty %}
   {% for minutes in led.minute %}
   {{ minutes.minute }}{% if not loop.last %}, {% endif %}
   {% endfor %}
   {% endif %}
  </span>
   </p>
  
  
  <hr>
  
   <p>
   Durée de progression de la led : <span class="bold">{{ led.dureeProgressionAllumage }} minutes</span>
   </p>
   
   <hr>
   
    <p>
   Luminosité en fin d'allumage : <span class="bold">{{ led.luminositeFinAllumage }} %</span>
   </p>
   
   <hr>

  <br/>

  <p>
    <a href="{{ path('menu_verif_led') }}" class="button medium">
      Retour 
    </a>
    <a href="{{ path('menu_edit_led', {'id': led.id}) }}" class="button medium">
     
      Modifier les paramètres
    </a>
    <a href="{{ path('menu_delete_led', {'id': led.id}) }}"  class="button medium">
      Supprimer ces paramètres
    </a>
  </p>

  
  </div>
 </div>
</div>
{% endblock %}
